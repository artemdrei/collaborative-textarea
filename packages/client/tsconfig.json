{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@root/*": ["src/*"],
      "@api/*": ["src/api/*"],
      "@store/*": ["src/store/*"],
      "@colors/*": ["src/assets/styles/colors.scss"]
    }
  }
}
